<h2>Task <%= @task.id %></h2>
<h3><%= @task.title %></h3>
<p><%= @task.details %></p>

<%= link_to("Back to tasks list", tasks_path) %>
<div class="btn btn-danger">
<%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe,
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</div>
